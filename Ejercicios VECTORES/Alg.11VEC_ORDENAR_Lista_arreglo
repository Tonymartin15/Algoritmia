Algoritmo Ordenar_lista
	Definir arreglo Como Entero;
	Definir num Como Entero;
	Definir i Como Entero;
	Definir i2 Como Entero;
	Definir i3 Como Entero;
	Definir i4 Como Entero;
	
	Repetir
		Escribir "Ingrese cuantos términos del arreglo son los que desea ordenar de menor a mayor";
		Leer num;
	Hasta Que num > 0
	Dimension arreglo[num];
	// LEER ARREGLO DE NÝMEROS
	Escribir "Ingrese cada número que desea tener en la lista";
	Para i <- 0 Hasta num - 1 Hacer
		Leer arreglo[i];
	FinPara
	//COMPARAR Y ORDENAR LA LISTA DE NÚMEROS
	Para i <- 0 Hasta num - 2 Con Paso 1 Hacer // como vas a comparar el ultimo con el penúltimo hay que ponerle n-2 para que no salga de rango
		i3 <- i;
		Para i2 <- i + 1 Hasta num - 1 Hacer
			Si arreglo[i2] < arreglo[i3] Entonces
				i3 <- i2;
			FinSi
		FinPara
		Si i3 <> i Entonces
			i4 <- arreglo[i];
			arreglo[i] <- arreglo[i3];
			arreglo[i3] <- i4;
		FinSi
	FinPara
	Escribir Sin Saltar "[";
	Para i <- 0 Hasta num - 1 Hacer
		Si i < num - 1 Entonces
			Escribir Sin Saltar arreglo[i], ",";	
		SiNo
			Escribir arreglo[i], "]";
		FinSi
	FinPara
FinAlgoritmo